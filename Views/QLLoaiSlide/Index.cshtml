@model IEnumerable<KhoaXayDung.Models.LoaiSlide>
@{
    ViewBag.Title = "Danh sách loại slide";
    Layout = "~/Views/Shared/_LayoutQL.cshtml";
}

<h2>Danh sách loại slide</h2>
<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenLoaiSlide)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoaiSlide)
                    </td>
                    <td>
                        @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaLoaiSlide }) |
                        @*@Html.ActionLink("Details", "Details", new { id=item.MaLoaiSlide }) |*@
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoaiSlide })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            "iDisplayLength": 25,
            "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Tất cả"]],
            responsive: true,
            "order": [],
            "language": {
                "sProcessing": "Đang xử lý...",
                "sLengthMenu": "Xem _MENU_ mục",
                "sZeroRecords": "Không tìm thấy dòng nào phù hợp",
                "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                "sInfoPostFix": "",
                "sSearch": "Tìm:",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "Đầu",
                    "sPrevious": "Trước",
                    "sNext": "Tiếp",
                    "sLast": "Cuối"
                }
            }
        });
    });
</script>
