<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables">
        <thead>
            <tr>
                <th>
                    Tên Tin
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Xem)
                </th>
                <th>
                    Ngày Đăng
                </th>
                <th>
                    Người Dùng
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Xem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NguoiDung.HT)
                    </td>


                    @if (Session["Quyen"] != null && Session["Quyen"].ToString() == "full")
                {
                        <td>
                            @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaT }) 
                            @*@Html.ActionLink("Xóa", "Delete", new { id = item.MaT })*@
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaT })
                        </td>


                    }



                </tr>
            }
        </tbody>


    </table>
</div>
