@model KhoaXayDung.Models.Tin
@{
    ViewBag.Title = @ViewBag.Title;
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
    <style>
        .img-center {
            margin: auto;
            max-width: 95%;
            margin-top:30px;
            margin-bottom:20px;
        }
    </style>
}

@section TheTieuDe {
    <ol class="breadcrumb chinhtd">
        <li><a href="@Url.Action("Index","trangchu")">Trang chủ</a></li>
        <li><a href="@Url.Action("DanhSach","TinTuc",new {id=Model.LoaiTin.MaLT })">@Html.DisplayFor(model => model.LoaiTin.TenLT)</a></li>
        <li></li>
    </ol>
}
<div class="cachle">
    <h2>@Html.DisplayFor(model => model.TenT)</h2>
    <h6>Ngày đăng: @Html.DisplayFor(model => model.NgayDang) | Xem: @Html.DisplayFor(model => model.Xem)</h6>

    @*@if (Model.H != null)
        {
            <img class="img-responsive cachtrenduoi" src="~/img/ckeditor/Images/@Html.DisplayFor(model=>model.H)" />
        }*@

    @MvcHtmlString.Create(Model.ND)

    @if (Model.F != null)
    {
        <object data="~/img/ckeditor/Files/@Model.F" type="application/pdf" width="100%" height="1200px"></object>
    }
</div>
<div class="page-header">
    <h1>Tin cùng loại <small></small></h1>
</div>

@Html.Action("_PartialTinCungLoai", "TinTuc")


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('img').removeAttr('style');

        $('img').addClass('img-center');
        $('img').addClass('img-responsive');

    });
</script>