                                        {
                                            <li style="font-weight: 700">
                                                <input type="radio" name="IDcha" value="@_menu.MaLT">
                                                <label for="age1">@_menu.TenLT</label>
                                                <br>
                                            </li>
                                            <ul>
                                                @foreach (var _sub in subMenu(_menu.MaLT))
                                                {
                                                    if (subMenu(_sub.MaLT).Count() > 0)
                                                    {
                                                        @*<li style="font-weight: 700">@_sub.TenLT</li>*@
                                                        <li style="font-weight: 700">
                                                            <input type="radio" name="IDcha" value="@_sub.MaLT">
                                                            <label for="age1">@_sub.TenLT</label>
                                                            <br>
                                                        </li>
                                                        <ul>
                                                            @foreach (var _sub1 in subMenu(_sub.MaLT))
                                                            {
                                                                <li>
                                                                    <input type="radio" name="IDcha" value="@_sub1.MaLT">
                                                                    <label for="age1">@_sub1.TenLT</label>
                                                                    <br>
                                                                </li>

                                                            }
                                                        </ul>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <input type="radio" name="IDcha" value="@_sub.MaLT">
                                                            <label for="age1">@_sub.TenLT</label>
                                                            <br>
                                                        </li>

                                                    }
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <li>
                                                <input type="radio" name="IDcha" value="@_menu.MaLT">
                                                <label for="age1">@_menu.TenLT</label>
                                                <br>
                                            </li>

                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.LoaiTin2.TenLT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
