@model IEnumerable<KhoaXayDung.Models.Slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQL.cshtml";
}

<h2>Quản lý liên kết đơn vị</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Hình ảnh
        </th>
        <th>
            Liên kết
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Show)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/img/ckeditor/Images/@Html.DisplayFor(modelItem => item.AnhSlide)" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LinkSide)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Show)
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.MaSlide })
    </td>
</tr>
}

</table>
